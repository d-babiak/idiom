<div class='row'>
  <div class='col-centered col-md-4 col-offset-md-4'>
    <h3>Sign Up</h3>

    <form action="<%= users_url %>" method="post" role='form'>
      <%= auth_token %>
  
      <div class='form-group'>
        <label for='user-username'>Username</label>
        <input type="text" 
            name="user[username]" 
            class='form-control' 
            id='user-username'>
      </div>

      <div class='form-group'>
        <label for='user-password'>Password</label>
        <input type="password" 
            name="user[password]" 
            class='form-control' 
            id='user-password'>
      </div>

      <input type="submit" class='btn btn-default' value="Sign Up">
    </form>
  </div>
</div>
