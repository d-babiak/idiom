<!DOCTYPE html>

<html>
<head>
  <title>Links</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <%= flash[:status] %>
</head>
<body>
  <nav class="navbar navbar-default" role="navigation">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <a class="navbar-brand" href="#">idi√∂me</a>
      </div>
      <!-- Collect the nav links, forms, and other content for toggling -->
      <ul class="nav navbar-nav">
        <% if signed_in? %>
          <li><%= link_to current_user.username, user_url(current_user) %></li>
          <li><%= link_to "Sign Out", session_url, :method => :delete %></li>
          <li><%= link_to "Problems", problems_url %></li>
        <% else %>
          <li><%= link_to "Sign In", new_session_url %></li>
          <li><%= link_to "Sign Up", new_user_url %></li>
        <% end %>
      </ul>
      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>

  <%= flash[:errors].join('<br>').html_safe if flash[:errors].present? %>
  <div class='container'>
    <%= yield %>  
  </div>
</body>
</html>

