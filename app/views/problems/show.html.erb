<div class='col-xs-4'>
  <h1><%= @problem.title %></h1>
  <p><%= @problem.description %></p>
  <h4>Test cases:</h4>
  <ul>
    <% @problem.solution_cases.each do |solution_case| %>
      <li><%= solution_case.content %></li>
    <% end %>
  </ul>
  
  Your solution:
  <div id="editor">function foo(items) {
      var x = "All this is syntax highlighted";
      return x;
  }</div>

  <form action='<%= solutions_url %>' method='POST'>
    <%= auth_token %>
    
      <input type='hidden'
          name='solution[submitter_id]'
          value='<%= current_user.id %>'>
    
      <input type='hidden'
          name='solution[problem_id]'
          value='<%= @problem.id %>'>
    
      <input type='hidden' name='solution[content]' id='solution'>
    <button type='submit' class='btn btn-sm btn-secondary'>Submit</button>
  </form>
  
  <h4>Solutions</h4>
  <% @problem.solutions.each do |solution| %>
    ======================================<br>
    <%= solution.submitter.username %>
    <%= format_solution(solution) %>
    <%= "Upvotes: #{solution.likes}" %>
    <%= rating_buttons(solution) %>
    <br>
  <% end %>

  <%= link_to 'Problems Index', problems_url %>
  
</div>

<script>
    var editor = ace.edit("editor");
    editor.setTheme("ace/theme/chrome");
    editor.getSession().setMode("ace/mode/ruby");
</script>
