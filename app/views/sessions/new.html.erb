<div class='row'>

  <div class='col-centered col-xs-4 col-offset-xs-8'>
    <h1 align='center' class='title'>idiom</h1>
    <h4>Sign In</h4>

    <form action="<%= session_url %>" method="post" role='form' style='display: inline;'>
      <%= auth_token %>

      <div class='form-group'>
        <label for='user-username'>Username</label>
        <input type="text"
            name="user[username]"
            class='form-control roundish'
            id='user-username'>
      </div>

      <div class='form-group'>
        <label for='user-password'>Password</label>
        <input type="password"
            name="user[password]"
            class='form-control roundish'
            id='user-password'>
      </div>

      <button type="submit" class='btn btn-default submit'>Sign In</button>
    </form>

    <form action="<%= session_url %>" method="post" role='form' style='display: inline;'>
      <%= auth_token %>
      <input type='hidden' name='user[username]' value='otto'>
      <input type='hidden' name='user[password]' value='markov'>
      <button type="submit" class='btn btn-default submit'>Guest User</button>
    </form
  </div>
</div>
