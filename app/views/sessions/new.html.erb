<div class='row'>
  
  <div class='col-centered col-xs-4 col-offset-xs-8'>
    <h1 align='center' class='title'>bitiom</h1>
    <h4>Sign In</h4>

    <form action="<%= session_url %>" method="post" role='form'>
      <%= auth_token %>
  
      <div class='form-group'>
        <label for='user-username'>Username</label>
        <input type="text" 
            name="user[username]" 
            class='form-control' 
            id='user-username'>
      </div>

      <div class='form-group'>
        <label for='user-password'>Password</label>
        <input type="password" 
            name="user[password]" 
            class='form-control' 
            id='user-password'>
      </div>

      <input type="submit" class='btn btn-default' value="Sign In">
    </form>
  </div>
</div>
