              <button type="submit" class='btn btn-default sign-in'>
                Sign In
              </button>
              <button type="submit" class='btn btn-default sign-up'>
                Sign Up
              </button>
            </form>

            <formstyle='display: inline;'>
              <input type='hidden' name='user[username]' value='otto'>
